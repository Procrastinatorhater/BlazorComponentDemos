@page "/counter"
    
<h1 class="mdc-typography--headline3">Counter</h1>

<CounterDisplay Label="Count" Value=currentCount />

<MdcButton onclick="@IncrementCount">Click me</MdcButton>

<p>Parent renders: <strong>@(++numRenders)</strong></p>

@functions {
    int currentCount = 0;
    int numRenders = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
